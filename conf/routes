# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                   controllers.Application.index()
GET         /content/image/:name                                controllers.content.Image.index(name)
POST        /content/get/horoscope                              controllers.content.Get.horoscope()
POST        /content/get/horoscope/:period                      controllers.content.Get.horoscopeByPeriod(period)
POST        /content/get/horoscopes/for                         controllers.content.Get.horoscopesFor()
POST        /content/get/keys                                   controllers.content.Get.keys()
POST        /content/get/keys/:period                           controllers.content.Get.keysByPeriod(period)
GET         /content/get/keys/for                               controllers.content.Get.keysFor()
POST        /content/search/names                               controllers.content.Search.names()
POST        /content/get/name                                   controllers.content.Get.name()
GET         /content/get/name/:id                               controllers.content.Get.nameById(id: Integer)
POST        /content/search/dreams                              controllers.content.Search.dreams()
POST        /content/get/dream                                  controllers.content.Get.dream()
GET         /content/get/dream/:id                              controllers.content.Get.dreamById(id: Integer)
POST        /content/search/amulets                             controllers.content.Search.amulets()
POST        /content/get/amulet                                 controllers.content.Get.amulet()
GET         /content/get/amulet/:id                             controllers.content.Get.amuletById(id: Integer)
GET         /content/search/chinas                              controllers.content.Search.chinas()
GET         /content/search/chinas/:locale                      controllers.content.Search.chinasByLocale(locale)
POST        /content/get/china                                  controllers.content.Get.china()
GET         /content/search/japans                              controllers.content.Search.japans()
GET         /content/search/japans/:locale                      controllers.content.Search.japansByLocale(locale)
POST        /content/get/japan                                  controllers.content.Get.japan()
GET         /content/search/druids                              controllers.content.Search.druids()
GET         /content/search/druids/:locale                      controllers.content.Search.druidsByLocale(locale)
POST        /content/get/druid                                  controllers.content.Get.druid()
GET         /content/search/flowers                             controllers.content.Search.flowers()
GET         /content/search/flowers/:locale                     controllers.content.Search.flowersByLocale(locale)
POST        /content/get/flower                                 controllers.content.Get.flower()
GET         /content/update/all                                 controllers.content.Update.all()
GET         /content/update/daily                               controllers.content.Update.daily()
GET         /content/update/weekly                              controllers.content.Update.weekly()
GET         /content/translate/flowers/to/:lang                 controllers.content.Translate.flowersTo(lang)
GET         /content/translate/druids/to/:lang                  controllers.content.Translate.druidsTo(lang)
GET         /content/translate/japans/to/:lang                  controllers.content.Translate.japansTo(lang)
GET         /content/translate/chinas/to/:lang                  controllers.content.Translate.chinasTo(lang)
GET         /content/translate/dreams/to/:lang/max/:max         controllers.content.Translate.dreamsTo(lang, max: Integer)
GET         /content/translate/amulets/to/:lang/max/:max        controllers.content.Translate.amuletsTo(lang, max: Integer)
POST        /crash                                              controllers.Application.crash()

GET         /portal/signin                                      controllers.portal.Signin.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                       controllers.Assets.at(path="/public", file)
