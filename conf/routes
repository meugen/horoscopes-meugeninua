# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /main                       controllers.Application.main()
GET     /content/image/:name        controllers.content.Image.index(name)
POST    /content/get/horoscope      controllers.content.get.Horoscope.all()
POST    /content/get/horoscope/:period      controllers.content.get.Horoscope.byPeriod(period)
POST    /content/search/names       controllers.content.search.Names.index()
POST    /content/get/name           controllers.content.get.Name.index()
POST    /content/search/dreams      controllers.content.search.Dreams.index()
POST    /content/get/dream          controllers.content.get.Dream.index()
POST    /content/search/amulets     controllers.content.search.Amulets.index()
POST    /content/get/amulet         controllers.content.get.Amulet.index()
GET     /content/search/chinas      controllers.content.search.Chinas.index()
POST    /content/get/china          controllers.content.get.China.index()
GET     /content/search/japans      controllers.content.search.Japans.index()
POST    /content/get/japan          controllers.content.get.Japan.index()
GET     /content/search/druids      controllers.content.search.Druids.index()
POST    /content/get/druid          controllers.content.get.Druid.index()
GET     /content/search/flowers     controllers.content.search.Flowers.index()
POST    /content/get/flower         controllers.content.get.Flower.index()
POST    /content/add/message        controllers.content.add.Message.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
